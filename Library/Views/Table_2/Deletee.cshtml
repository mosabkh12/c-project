@model Library.Models.messagee

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Delete Book</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://png.pngtree.com/png-clipart/20210822/original/pngtree-clear-icon-png-image_6650508.jpg');
            background-size: cover;
            background-position: center;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background-color: rgba(255, 255, 255, 0.5); /* Adjust the alpha value to control transparency */
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 0 10px rgb(255, 0, 0);
        }

        h2 {
            color: #000000;
            text-align: center;
        }

        h3 {
            color: #343a40;
            text-align: center;
        }

        .form-container {
            margin-top: 20px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            color: #fff;
            background-color: rgb(127, 74, 74);
            border: none;
            cursor: pointer;
        }

        .btn-back {
            background-color: #6c757d;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn-back:hover {
            background-color: #495057;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Message</h2>
        <h3>Are you sure you want to delete this?</h3>
        <div class="form-container">
            @*<h4>Book</h4>*@
            <hr />
            <dl>
                <!-- Add book details here if needed -->
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <input type="submit" value="Delete" class="btn" />
                    @Html.ActionLink("Back to List", "amount", null, new { @class = "btn btn-back" })
                </div>
            }
        </div>
    </div>
</body>
</html>
