@model Library.Models.Table_2

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Your CSS styles */
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://images.alphacoders.com/133/1339726.png'); /* Add the path to your background image */
            background-size: cover;
            background-repeat: no-repeat;
        }

        .container {
            max-width: 400px; 
            margin: 0 auto; 
            background-color: rgba(47, 47, 47, 0.7); 
            padding: 40px; 
            border-radius: 8px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
            text-align: center; 
        }

        h2 {
            color: #ffffff; 
            font-size: 40px; 
            margin-bottom: 30px;
        }

        label {
            font-weight: 500; 
            color: #ffffff; 
            margin-bottom: 10px; 
        }

        .form-control {
            background: none; 
            border: 1px solid #ffffff; 
            padding: 15px 23px; 
            font-size: 16px; 
            border-radius: 8px; 
            color: #ffffff; 
            width: 100%; 
        }

            .form-control:focus {
                border-color: #0173ed; 
                outline: none;
            }

        .btn-submit {
            background-color: #794343; 
            color: #ffffff;
            border: none;
            padding: 15px;
            border-radius: 8px;
            font-size: 16px; 
            font-weight: 500; 
            cursor: pointer;
            width: 100%; 
            transition: background-color 0.3s ease; 
        }

            .btn-submit:hover {
                background-color: #0173ed; 
            }

        .btn-register {
            background-color: #794343; 
            color: #ffffff; 
            border: none;
            padding: 15px;
            border-radius: 8px; 
            font-size: 16px; 
            font-weight: 500; 
            cursor: pointer;
            width: 100%; 
            margin-top: 10px; 
            transition: background-color 0.3s ease; 
        }

            .btn-register:hover {
                background-color: #495057; 
            }

        .alert-danger {
            color: #dc3545; 
            text-align: center; 
            margin-top: 20px; 
        }
    </style>
</head>
<body>


    <div class="container">
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Table_2", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Username)
                @Html.EditorFor(model => model.Username, new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new { @class = "form-control", required = "required", type = "password" })
               
            </div>

            <button type="submit" class="btn btn-submit">Login</button>
            <div class="alert-danger">@ViewBag.ErrorMessage</div>

        }

        <!-- Register button -->
        <a href="@Url.Action("AddOrEdit", "Table_2")" class="btn btn-register">Sign Up</a>

    </div>

   

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
