<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-image: url('https://static.vecteezy.com/system/resources/previews/024/948/487/large_2x/top-view-white-office-desk-with-computer-pen-eyeglass-notebook-and-cup-of-coffee-copy-space-mock-up-photo.jpg'); /* Add your beautiful background image here */
            background-size: cover;
            background-position: center;
        }

        .container {
            width: 80%; /* Adjust as needed */
            max-width: 800px;
            margin: 0 auto; /* Center the container horizontally */
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); /* Soft shadow effect */
            padding: 20px;
            margin-top: 10%; /* Adjust as needed */
        }

        .header {
            background-color: #95ab85;
            color: #fff;
            padding: 20px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align: center;
        }

        h2 {
            margin: 0;
            font-size: 24px;
        }

        .actions {
            margin-top: 20px;
            text-align: center;
        }

            .actions a {
                margin-right: 10px;
                color: #3b681a;
                text-decoration: none;
                transition: color 0.3s ease;
                font-weight: bold;
                font-size: 16px;
                padding: 8px 16px;
                border-radius: 5px;
                background-color: #ffffff;
            }

                .actions a:hover {
                    color: #ffffff;
                    background-color: #95ab85;
                }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #95ab85;
            font-weight: bold;
            color: #fff;
        }

        .book-name {
            font-size: 18px;
        }

        .book-actions {
            font-size: 16px;
        }

            .book-actions a {
                color: #57768a; /* Default color */
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .book-actions a:hover {
                    color: #ffffff; /* Hover color */
                    background-color: #245474;
                }

                .book-actions a.edit {
                    color: blue; /* Change edit link color */
                }

                .book-actions a.delete {
                    color: red; /* Change delete link color */
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Admin</h2>
        </div>

        <div class="actions">
            <a href="@Url.Action("Create")">Add Book</a>
            <a href="values">my-values</a>
            <a href="reqshow">Requests</a>
            <a href="amount">Messages</a>
            <a href="login">Exit</a>
        </div>

        <table>
            <tr>
                <th>Book Name</th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="book-name">@item.name</td>
                    <td class="book-actions">
                        <a href="@Url.Action("Edit", new { id = item.name })">Edit</a>
                        @*<a href="@Url.Action("Details", new { id = item.name })">Details</a>*@
                        <a href="@Url.Action("Delete", new { id = item.name })">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
